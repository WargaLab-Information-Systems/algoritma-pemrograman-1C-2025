#soal NO.1

# Program menampilkan bilangan prima dari 1 sampai n

# Meminta input batas akhir
n = int(input("Masukkan batas akhir (n): "))

print(f"Bilangan prima dari 1 sampai {n} adalah:")

# Perulangan dari 2 sampai n
for i in range(2, n + 1):
    # Asumsi awal: i adalah bilangan prima
    prima = True
    
    # Cek apakah i memiliki faktor selain 1 dan dirinya sendiri
    for j in range(2, int(i**0.5) + 1):     # untuk membuat urutan angka 
        if i % j == 0:   # j untuk menyatakan bilangan imagener
            prima = False
            break  # keluar secara paksa
    # Jika prima tetap True, maka i adalah bilangan prima
    if prima:
        print(i)


# Soal NO.2

# Program simulasi mesin ATM sederhana

# Contoh PIN yang benar (format: XXYYY, X = 2 NIM awal, Y = 3 NIM terakhir)
# Misal NIM = 250441100049 â†’ PIN = 25049
PIN_BENAR = 25049

# Jumlah percobaan maksimal
kesempatan = 3

print("=== Simulasi Mesin ATM ===")

# Perulangan untuk 3 kali percobaan
for i in range(kesempatan):        # membuat urutan angka 
    try:    # untuk menjalankan blok kode 

        pin = int(input("Masukkan PIN (5 digit): "))
        
        # Cek apakah panjang PIN 5 digit
        if len(str(pin)) != 5: # len untuk menghitung jumlah elemen
            print("PIN harus terdiri dari 5 digit angka!\n")
            continue                       # melewati satu bagian dan lanjut ke bagian berikutnya

        # Cek kesesuaian PIN
        if pin == PIN_BENAR:
            print("PIN benar, akses diterima ")
            break                          # berhenti dan keluar dari loop 
        else:
            sisa = kesempatan - (i + 1)
            if sisa > 0:
                print(f"PIN salah, coba lagi. Kesempatan tersisa: {sisa}\n")
            else:
                print("Akses ditolak, kartu diblokir")
    except ValueError:                         #untuk menangani pengecualian yang terjadi ketika suatu fungsi menerima argumen 
        print("Input tidak valid! Harus berupa angka.\n")


# Soal NO.3

# Program Analisis Kalimat
print("=== Analisis Kalimat ===")

# Input kalimat dari user
kalimat = input("Masukkan sebuah kalimat: ")

# Inisialisasi variabel penghitung
vokal = 0
konsonan = 0

# Daftar huruf vokal
huruf_vokal = "aiueoAIUEO"

# Menghitung huruf vokal dan konsonan
for huruf in kalimat:
    if huruf.isalpha():  # cek apakah karakter huruf (a-z / A-Z)
        if huruf in huruf_vokal:
            vokal += 1
        else:
            konsonan += 1

# Menghitung jumlah kata
jumlah_kata = len(kalimat.split()) # len untuk menghitung jumlah elemen # split untuk memisahkan string menjadi list berdasarkan pemisah tertentu

# Tampilkan hasil
print("\n=== Hasil Analisis ===")
print(f"Jumlah huruf vokal     : {vokal}")
print(f"Jumlah huruf konsonan  : {konsonan}")
print(f"Jumlah kata dalam kalimat : {jumlah_kata}")


# Soal NO.4


# Program Struk Pembelian IndoMei

print("=== Program Struk Pembelian IndoMei ===")

while True:
    # Input nama pembeli
    nama = input("\nMasukkan nama pembeli: ")

    # Input jumlah barang yang dibeli
    jumlah_barang = int(input("Masukkan jumlah barang yang dibeli: "))

    # List untuk menyimpan barang dan harga
    daftar_barang = []   # kurung siku untuk mengakses indek list/string
    total_barang = 0

    # Input nama dan harga setiap barang
    for i in range(jumlah_barang):
        print(f"\nBarang ke-{i+1}:")
        nama_barang = input("  Nama barang : ")
        harga = float(input("  Harga barang (Rp): "))
        daftar_barang.append((nama_barang, harga))
        total_barang += harga

    # Menampilkan struk pembelian
    print("\n==============================")
    print("         INDO MEI")
    print("==============================")
    print(f"Nama Pembeli : {nama}")
    print("------------------------------")
    print("Daftar Barang:")
    for barang, harga in daftar_barang:
        print(f"{barang:20} Rp{harga:,.0f}")
    print("------------------------------")
    print(f"TotalHarga   : Rp{total_barang:,.0f}")
    print("==============================")
    print("Terima kasih telah berbelanja di IndoMei ")
    print("==============================")

    # Menanyakan apakah anda pembeli berikutnya?
    lanjut = input("\nApakah ada pembeli berikutnya? (y/n): ").lower()   # ungtuk mengubah huruf besar ke hurus kecil 
    if lanjut != 'y':
        print("\nProgram selesai. Semua transaksi telah dicatat.")
        break    
