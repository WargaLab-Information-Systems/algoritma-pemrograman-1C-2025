# #Soal No.1
harga_buku = 5000
jumlah_buku = 3
harga_pensil = 4500
jumlah_pensil = 2
pajak = 0.10  #10%

#hitung total harga sebelum pajak
total_buku = harga_buku * jumlah_buku
total_pensil = harga_pensil * jumlah_pensil
total_harga = total_buku + total_pensil

#hitung pajak 
total_pajak = total_harga * pajak

#total yang harus dibayar
total_bayar = total_harga + total_pajak

#output
print("total_harga:", harga_buku * jumlah_buku)
print("total_harga:", harga_pensil * jumlah_pensil)
print("total_harga:", total_buku + total_pensil)
print("total harga sebelum pajak : Rp" , total_harga)
print("total pajak yang harus di bayar : Rp", int (total_pajak))
print("total yang harus di bayar : Rp", total_bayar)


#Soal No.2

#Ukuran balok 
panjang = 10 #cm
lebar = 6 #cm
tinggi = 4 #cm

#menghitung volume 
volume = panjang * lebar * tinggi

#menghitung luas permukaan 
luas_permukaan = 2 * (panjang * lebar + panjang * tinggi + lebar * tinggi)

#output
print( "volume balok :", volume, "cm3")
print("luas permukaan balok =", luas_permukaan, "cm2")


#Soal No.3 

#jumlah bola
merah = 8
biru = 6

#jumlah semua bola
total_bola = merah + biru

#jumlah bola yang diambil
ambil = 3 

#menghitung kombinasi 
kombinasi = (total_bola *(total_bola -1) * (total_bola -2 )) // (ambil * (ambil - 1) * (ambil - 2 ))

#output 
print("jumlah total bola adalah :", total_bola )
print("jumlah bola yang diambil :", ambil)
print("jumlah kemungkinan kombinasi yang diambil adalah :", kombinasi)
