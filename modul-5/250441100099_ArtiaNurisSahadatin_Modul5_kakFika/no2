#MENGECEK APAKAH DUA KATA ADALAH ANAGRAM    
def cek_anagram():
    kata1 = input ("masukkan kata pertama:")
    kata2 = input ("masukkan kata kedua:")

#MENGHILANGKAN SPASI DAN UBAH KE HURUF KECILL
    k1 = kata1 .replace (" ", "") #replace digunakan menghilangkan spasi
    k2 = kata2.replace (" ", "")

#MEMBANDINGKAN HURUF SETELAH DIURUTKAN
    if sorted(k1) == sorted (k2): #sorted digunakan untuk mengurutkan huruf
        print (f"{kata1}dan {kata2}adalah anagram")
        return True
    else:
        print (f"{kata1} dan {kata2} bukan anagram")
        return False

#PEMANGGILAN FUNGSI
cek_anagram()