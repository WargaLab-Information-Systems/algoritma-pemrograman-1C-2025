#SOAL 1
   # Fungsi rekursif untuk menghitung faktorial
def faktorial(n):
    if n == 0 or n == 1:
        return 1
    else:
        return n * faktorial(n - 1)

# Program utama
print("=== Program Menghitung Faktorial (Rekursif) ===")
n = int(input("Masukkan bilangan bulat non-negatif: "))

# Validasi input
if n < 0:
    print("Maaf, bilangan harus non-negatif!")
else:
    hasil = faktorial(n)
    print(f"Faktorial dari {n} adalah: {hasil}")

#SOAL 2
# Fungsi untuk mengecek apakah dua kata merupakan anagram
def cek_anagram(kata1, kata2):
    # Jika panjang kata berbeda, langsung bukan anagram
    if len(kata1) != len(kata2):
        return False
    
    # Menghitung jumlah huruf secara manual
    for huruf in kata1:
        if kata1.count(huruf) != kata2.count(huruf):
            return False
    return True

# Program utama
print("=== Program Pengecekan Anagram ===")
kata1 = input("Masukkan kata pertama: ")
kata2 = input("Masukkan kata kedua: ")

# Memanggil fungsi dan menampilkan hasil
if cek_anagram(kata1, kata2):
    print(f"Kata '{kata1}' dan '{kata2}' merupakan ANAGRAM!")
else:
    print(f"Kata '{kata1}' dan '{kata2}' BUKAN anagram.")

#soal 3
# Fungsi untuk menghitung gaji bersih karyawan
def hitung_gaji(nama, jabatan, gaji_pokok):
    pajak = 0.05 * gaji_pokok  # Pajak 5%
    
    # Menentukan tunjangan berdasarkan jabatan
    if jabatan == "Manager":
        tunjangan = 0.10 * gaji_pokok
    elif jabatan == "Staff":
        tunjangan = 0.05 * gaji_pokok
    else:
        tunjangan = 0  # Jika jabatan tidak dikenali
    
    # Hitung gaji bersih
    gaji_bersih = gaji_pokok - pajak + tunjangan
    
    # Menampilkan hasil perhitungan
    print("\n=== HASIL PERHITUNGAN GAJI ===")
    print(f"Nama Karyawan  : {nama}")
    print(f"Jabatan        : {jabatan}")
    print(f"Gaji Pokok     : Rp {gaji_pokok:,.0f}")
    print(f"Pajak (5%)     : Rp {pajak:,.0f}")
    print(f"Tunjangan      : Rp {tunjangan:,.0f}")
    print(f"Gaji Bersih    : Rp {gaji_bersih:,.0f}")

# Program utama
print("=== PROGRAM HITUNG GAJI KARYAWAN ===")
nama = input("Masukkan nama karyawan : ")
jabatan = input("Masukkan jabatan (Manager/Staff) : ")
gaji_pokok = float(input("Masukkan gaji pokok : "))

# Panggil fungsi
hitung_gaji(nama, jabatan, gaji_pokok)
