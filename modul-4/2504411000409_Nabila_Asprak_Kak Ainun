# saol no 1
# Program untuk menampilkan kondisi lampu di taman kota

# Meminta input jumlah baris lampu
jumlah_baris = int(input("Masukkan jumlah baris lampu: "))

# Perulangan untuk setiap baris
for baris in range(1, jumlah_baris + 1):      # untuk mengulang proses pencetakan lampu pada setiap baris 
    # Meminta input jumlah lampu di baris tersebut
    jumlah_lampu = int(input(f"Masukkan jumlah lampu pada baris ke-{baris}: "))

    # Perulangan untuk setiap lampu di baris tersebut
    for lampu in range(1, jumlah_lampu + 1):
        # Mengecek kondisi lampu
        if lampu % 3 == 0:     # jika lampu kelipatan 3, maka lampu rusak  
            print(f"Lampu ke-{lampu} pada baris {baris} rusak.")
        else:
            print(f"Lampu ke-{lampu} pada baris {baris} menyala.")
    
    # Jika ini adalah baris terakhir, tambahkan pesan tambahan
    if baris == jumlah_baris:
        print("Periksa sambungan daya utama.")

  # soal no 2
  # Program menghitung total gaji mingguan Pak Wowo

total_gaji = 0
total_lembur = 0
total_bonus_shift = 0

print("=== Program Hitung Gaji Mingguan Pak Wowo ===")

# perulangan untuk 7 hari 
for hari in range(1, 8):
    print(f"\nHari ke-{hari}: ")

    # Validasi input jam lembur
    while True:        # perulangan tanpa batas
        try:      # untuk menangani error agar program tidak berhenti tiba-taba saat terjadi kesalahan 
            jam_lembur = int(input("Masukkan jumlah jam lembur (0-8): "))
            if jam_lembur < 0:
                print("Jam lembur tidak boleh negatif! Coba lagi.")
            else:           # mengeksekusi kode jika kondisi tidak terpenuhi
                break
        except ValueError:    # untuk menangani error saat input bukan angka yang valid
            print("Input tidak valid! Harus berupa angka.")

    # Validasi input shift malam
    while True:
        shift_malam = input("Apakah shift malam? (y/n): ").lower()    # untuk mengubah huruf besar ke huruf kecil
        if shift_malam in ['y', 'n']:
            break
        else:
            print("Input tidak valid! Ketik 'y' untuk ya atau 'n' untuk tidak.")

    # Hitung gaji pokok
    gaji_harian = 100.000
    bonus_shift = 0
    upah_lembur = 0

    # Hitung upah lembur sesuai aturan
    if jam_lembur == 0:
        upah_lembur = 0
    
    elif 1 <= jam_lembur <= 3:
        upah_lembur = jam_lembur * 25.000
    elif jam_lembur == 4:
        upah_lembur = 100.000 
    elif jam_lembur == 5:
        upah_lembur = 125.000
    elif jam_lembur == 6:
        upah_lembur = 200.000
    elif jam_lembur == 7:
        upah_lembur = 225.000
    elif jam_lembur == 8:
        upah_lembur = 300.000
    elif jam_lembur > 8:
        print("Lembur melebihi batas, tidak dihitung.")
        upah_lembur = 0
# elif di gunakan untuk menambah kondisi lain setelah if 

    # Tambah bonus shift malam
    if shift_malam == 'y':
        bonus_shift = 50.000
        total_bonus_shift += bonus_shift

    # Total gaji harian
    gaji_harian += upah_lembur + bonus_shift

    # Tambah ke total mingguan
    total_gaji += gaji_harian
    total_lembur += jam_lembur if jam_lembur <= 8 else 0

    # Tampilkan ringkasan harian
    print(f"Gaji hari ke-{hari}: Rp{gaji_harian:,}")

# output 
print("\n=== Rekap Gaji Mingguan Pak Wowo ===")
print(f"Total jam lembur: {total_lembur} jam")
print(f"Total bonus shift malam: Rp{total_bonus_shift:,}")
print(f"Total gaji selama seminggu: Rp{total_gaji:,}")

# soal no 3 
# Program membuat dua piramida angka berhadapan (simetris)

# Input jumlah baris
n = int(input("Masukkan jumlah baris (n): "))

# Perulangan baris 
for i in range(1, n + 1):     
    # Sisi kiri piramida 
    for j in range(1, i + 1):
        print(j, end=" ")

    # Spasi di tengah: agar piramida kanan dan kiri berjarak dan simetris
    spasi = (n - i) * 2       # artinya jumlah spasi di tengah berkurang tiap baris, supaya pola tetap semetris.
    for k in range(spasi):
        print(" ", end=" ")

    # Sisi kanan piramida (cermin ) : menampilkan angka turun dari i ke 1, membentuk sisi kanan piramida (cermin) 
    for l in range(i, 0, -1):
        print(l, end=" ")

    # Pindah baris
    print()
